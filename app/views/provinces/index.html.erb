<%- model_class = Province -%>
<div class="page-header">
  <h1><%=t '.title', :default =>"城市管理" %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%=I18n.t  model_class.human_attribute_name(:id) %></th>
      <th><%= I18n.t model_class.human_attribute_name(:province) %></th>
      <th><%= I18n.t model_class.human_attribute_name(:city) %></th>
      <th><%=I18n.t model_class.human_attribute_name(:created_at) %></th>
      <th><%=I18n.t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @provinces.each do |province| %>
      <tr>
        <td><%= link_to province.id, province_path(province) %></td>
        <td><%= province.province %></td>
        <td><%= province.city %></td>
        <td><%=time_to_str  province.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("编辑")),
                      edit_province_path(province), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("删除")),
                      province_path(province),
                      :method => :delete,
                      :data => { :confirm =>t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("新建")),
            new_province_path,
            :class => 'btn btn-primary' %>
