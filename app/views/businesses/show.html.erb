<%- model_class = Business -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong>商家名称:</strong></dt>
  <dd><%= @business.name %></dd>
  <dt><strong>地址:</strong></dt>
  <dd><%= @business.address %></dd>
  <dt><strong>经度:</strong></dt>
  <dd><%= @business.lat %></dd>
  <dt><strong>纬度:</strong></dt>
  <dd><%= @business.lng %></dd>
  <dt><strong>电话号码:</strong></dt>
  <dd><%= @business.tel %></dd>
  <dt><strong>手机号码:</strong></dt>
  <dd><%= @business.phone %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              businesses_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_business_path(@business), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              business_path(@business),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
